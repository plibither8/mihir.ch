- const {networks} = htmlWebpackPlugin.options;

//- Include all common mixins
include ../../templates/common.pug

doctype html

html(lang="en")

	head
		//- Generate head
		+head(title="Contact Â· Mihir Chaturvedi")

		// Styles
		link(rel="stylesheet" href="/assets/css/contact.css")

	body

		+nav('Contact')

		main

			section

				include:markdown-it(html=true) ../../content/contact.md

				.networks

					each network in networks
						+networkLink(network)

				form(name="contact" method="POST" action="https://formspree.io/plibither8@gmail.com")

					label(for="contact-form_name") Name
					input(name="name" type="text" placeholder="Enter your name" id="contact-form_name" required)

					label(for="contact-form_email") Email
					input(name="email" type="email" placeholder="Enter your email" id="contact-form_email" required)

					label(for="contact-form_message") Message
					textarea(name="message" placeholder="Enter your message" id="contact-form_message" required)

					input(type="submit" value="Send")

		//- Footer
		+footer()
