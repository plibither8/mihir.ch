//- Mixins, required by "projects"
include ./pug/mixins.pug

//- Include all common mixins
include ../../templates/common.pug

doctype html

html(lang="en")

	head
		//- Generate head with default values
		+head()

		// Styles
		link(rel="stylesheet" href='/assets/css/index.css')

	body

		//- Navigation
		+nav('Home')

		main

			//- Heading
			include ./pug/heading.pug

			hr

			//- Featured Projects
			include ./pug/projects.pug

			hr

			//- Recent Activity
			include ./pug/activity.pug

			hr

			//- Contact
			include ./pug/contact.pug

		//- Footer
		+footer()

	//- Load scripts after </body> and before </html>
	script(src="/assets/js/index.js" defer)
