nav
	position: fixed
	z-index: 10
	margin: 2vh

	.links
		border: 3px solid #984c6b
		background: #fff

		@media only screen and (max-width: 1200px)
			display: none

	a.button
		display: flex
		padding: 15px
		color: #b34871
		font-weight: bold
		user-select: none
		justify-content: flex-start
		align-items: center

		img
			height: 19px

		&:hover
			background: #ffe6f0

	button
		background: #fff
		border: 3px solid #984c6b
		margin-bottom: 10px
		cursor: pointer

		img
			width: 35px
			padding: 2px

		&::before
			content: ''
			position: absolute
			height: 0
			width: 100%
			bottom: 0
			background: #f3e4eb
			transition: 0.1s all linear

		&:hover, &:focus
			&::before
				height: 100%