nav
	width: 95%
	max-width: 800px
	margin: 2vh auto 0 auto
	display: flex
	font-family: $mono-font-stack
	color: $accent-color-9
	flex-wrap: wrap

	a
		display: flex
		justify-content: center
		align-items: center
		margin: 10px 7.5px
		padding: 5px 10px
		font-family: $mono-font-stack
		font-weight: bold
		font-size: 20px

		&::before
			content: ''
			position: absolute
			display: block
			bottom: 0
			height: 35%
			width: 100%
			background: alpha($accent-color-4, 0.15)
			transition: 0.1s all linear

		&:hover, &:focus
			&::before
				height: 100%
