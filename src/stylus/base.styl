@charset "utf-8"

@import "variables"
@import "universal"

body
	background: #fff
	overflow-y: auto
	font-family $default-font-stack
	font-size 16px
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale
	-webkit-overflow-scrolling: touch

@keyframes gradientBG
	0%
		background-position: 0% 50%;
	50%
		background-position: 100% 50%;
	100%
		background-position: 0% 50%;
