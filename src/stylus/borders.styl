section.background
	height: 100vh
	width: 100vw
	background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
	background-size: 500% 500%;
	animation: gradientBG 5s ease infinite;

@keyframes gradientBG
	0%
		background-position: 0% 50%;
	50%
		background-position: 100% 50%;
	100%
		background-position: 0% 50%;
