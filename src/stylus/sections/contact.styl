section.contact

	p
		font-size: 20px
		color: #333
		margin: 20px 0
		line-height: 1.5

		&.status
			font-size: 22px
			color: #000

		a
			color: var(--accent-color-9)
			anchorLinkBottomBar(25%, alpha($accent-colors[4], 0.15))

	.networks
		width: 100%
		display: flex
		flex-flow: wrap
		margin: 0px -15px
		color: var(--accent-color-9)

		a
			display: flex
			justify-content: center
			align-items: center
			margin: 10px 15px
			padding: 5px 10px
			font-family: var(--mono-font-stack)
			font-weight: bold
			anchorLinkBottomBar(35%, alpha($accent-colors[4], 0.15))

			img
				height: 25px
				margin-right: 5px

	form
		display: flex
		flex-direction: column
		max-width: 600px
		margin-top: 2vh

		label
			font-size: 20px
			font-weight: bold
			color: #444
			margin-top: 20px

		input, textarea
			border: 3px solid var(--accent-color-0)
			margin: 5px 0
			padding: 10px
			font-size: 16px
			border-radius: 3px
			font-family: var(--default-font-stack)
			transition: .1s
			color: #222
			line-height: 1.5

			&[type="submit"]
				width: 100px
				color: var(--accent-color-5)
				background: var(--accent-color-0)
				cursor: pointer
				margin-top: 20px
				font-weight: bold

			&[type="email"]
				font-family: var(--mono-font-stack)

			&:active, &:focus
				border-color: var(--accent-color-2)
				outline: none

			&:hover
				box-shadow: 0 0 10px var(--accent-color-0)

		textarea
			resize: vertical
			height: 150px
