section.projects

	.card
		margin: 40px 0

		img
			margin: 0 auto 20px auto
			display: block
			max-height: 200px
			min-height: 50px
			max-width: 100%

		> a
			display: inline-block
			anchorLinkBottomBar(25%, alpha($accent-color-4, 0.2))

			h3
				font-size: 25px
				font-weight: normal
				color: #000
				font-family: $mono-font-stack

				&::after
					content: 'â†—'
					color: $accent-color-1
					transition: 0.1s all linear

			&:hover, &:focus
				color: $accent-color-5

				h3::after
					color: inherit

		p.caption
			font-size: 18px
			color: #222
			margin: 10px 0
			line-height: 1.5

			time
				white-space: nowrap
				font-size: 18px
				color: #757575

			span
				font-style: normal

			button
				border: none
				background: $accent-color-0
				font-family: monospace
				color: $accent-color-5
				font-size: 20px
				font-weight: bold
				cursor: pointer
				margin-left: 5px
				padding: 0 5px
				border-radius: 3px
				z-index: 2

		p.details
			font-size: 16px
			color: #222
			line-height: 1.5
			overflow: hidden
			padding-top: 10px
			min-height: 120px

			a
				color: $accent-color-5

				&:hover
					&::before
						height: 100%

			picture
				display: block
				position: absolute
				right: 0
				opacity: 0.15

			span
				z-index: 2
				max-width: 90%
