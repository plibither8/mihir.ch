section.intro

	p:not(.small)
		max-width: 600px
		font-size: 20px
		line-height: 1.5
		color: #222
		margin: 20px 0

		span
			color: #000

		a
			color: $accent-color-8
			anchorLinkBottomBar(35%, alpha($accent-color-4, 0.15))

	p.small
		margin-top: 10px
		font-size: 12px
		color: $accent-color-5
		padding: 5px 0
		height: 23px

		code
			letter-spacing: 1px

		button
			border: none
			background: none
			color: inherit
			font-size: inherit
			font-family: inherit

			&.expand
				cursor: pointer
				font-weight: bold

			&.tooltip
				margin-left: 10px
				cursor: help
				text-decoration: underline dotted

				&:hover,
				&:focus
					color: $accent-color-9

					&::after
						content: 'Sarcastic and satirical. No harm meant. Maybe.'
						position: absolute
						min-width: 100px
						margin-left: 10px
						padding: 5px 5px 5px 10px
						background: $accent-color-0
						border-left: 3px solid $accent-color-1
						color: $accent-color-7
						line-height: 1.3
