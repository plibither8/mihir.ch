@require "stylus/base"

@import "stylus/nav"

hr
	border: none
	width: 100%
	height: 3px
	background: $accent-color-1
	margin: 7vh auto
	max-width: 800px

main
	width: 95%
	margin: 0 auto
	padding: 10px
	overflow-x: hidden
	max-width: 800px


section
	margin: 7vh auto
	width: 100%

section.heading

	h1
		font-size: 40px
		padding: 10px 0
		color: $accent-color-5
		text-shadow: 3px 4px 0 $accent-color-1
		font-family: $mono-font-stack

	p.caption
		font-size: 18px
		color: #666

		span
			font-weight: bold
			font-size: 26px
			color: $accent-color-3
			font-family: $mono-font-stack

	img
		position: absolute
		width: 40vh
		right: -50px
		top: -50px
		opacity: 0.1

section.intro

	p:not(.small)
		max-width: 600px
		font-size: 20px
		line-height: 1.5
		color: #222
		margin: 20px 0

		span
			color: #000

		a
			color: $accent-color-4

			&::before
				content: ''
				height: 35%
				width: 100%
				background: alpha($accent-color-3, 0.2)
				position: absolute
				bottom: 0px
				transition: 0.1s all linear

			&:hover
				color: $accent-color-5
				&::before
					height: 100%

	p.small
		margin-top: 10px
		font-size: 12px
		color: $accent-color-9
		display: inline-block
		max-width: 650px

		span.more
			color: inherit
			padding: 5px
			display: block
			border: 1px solid $accent-color-9

		code
			letter-spacing: 1px

		button
			border: none
			background: none
			color: inherit
			font-size: inherit
			font-family: inherit

		button.expand
			padding: 5px
			cursor: pointer
			font-weight: bold
			border-radius: 3px
			border: 2px solid $accent-color-9
			box-shadow: 2px 3px
			position: relative

			&:focus, &:active
				box-shadow: 1px 1px
				top: 1px
				left: 1px
				outline: none

		button.tooltip
			margin-left: 10px
			cursor: help
			text-decoration: underline dotted

			&:hover,
			&:focus
				color: $accent-color-3

				&::after
					content: 'Sarcastic and satirical. No harm meant. Maybe.'
					position: absolute
					min-width: 100px
					margin-left: 10px
					padding: 5px 5px 5px 10px
					background: $accent-color-0
					border-left: 3px solid $accent-color-1
					color: $accent-color-7
					line-height: 1.3

section.projects

	h2
		font-family: $mono-font-stack
		color: $accent-color-4
		color: #333
		text-shadow: 3px 3px 0 $accent-color-1
		font-size: 30px

	.card
		margin: 30px 10px

		img
			margin: 0 auto 20px auto
			display: block
			max-height: 200px
			min-height: 50px
			max-width: 100%

		> a
			display: inline-block

			h3
				font-size: 25px
				font-weight: normal
				color: #000
				font-family: $mono-font-stack

				&::after
					content: 'â†—'
					color: $accent-color-1
					transition: 0.1s all linear

			&:hover, &:focus
				color: $accent-color-5

				h3::after
					color: inherit

				&::before
					height: 100%

			&::before
				content: ''
				position: absolute
				bottom: 0
				width: 100%
				height: 25%
				background: alpha($accent-color-3, 0.2)
				transition: 0.1s all linear

		p.caption
			font-size: 18px
			color: #222
			margin: 10px 0
			line-height: 1.5

			time
				white-space: nowrap
				font-size: 18px
				color: #888

			span
				font-style: normal

			button
				border: none
				background: none
				font-family: monospace
				color: $accent-color-3
				font-size: 16px
				font-weight: bold
				cursor: pointer
				margin-left: 5px
				padding: 0 5px
				border: 1px solid 
				border-radius: 3px
				box-shadow: 2px 2px
				z-index: 2
				position: relative
				transition: 0.1s all ease-out

				&:active, &:focus
					box-shadow: 1px 1px
					outline: none
					top: 1px
					left: 1px

		p.details
			font-size: 16px
			color: #333
			line-height: 1.5
			overflow: hidden
			padding-top: 10px
			min-height: 120px

			a
				color: $accent-color-5

				&:hover
					&::before
						height: 100%

			picture
				display: block
				position: absolute
				right: 0
				opacity: 0.15

			span
				z-index: 2

		@media only screen and (max-width: 1000px)
			margin: 30px 0

section.about

	p
		font-size: 20px
		line-height: 1.6
		color: #333
		margin: 20px 0
