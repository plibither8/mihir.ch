@require "stylus/base"

@import "stylus/nav"

hr
	border: none
	width: 100%
	height: 3px
	background: #fceaf3
	margin: 7vh 0

div.main
	width: 95%
	max-width: 800px
	margin: 0 auto
	padding: 10px

section.heading
	margin: 7vh 0

	h1
		font-size: 40px
		padding-bottom: 10px
		color: #984c6b

	p.caption
		font-size: 18px
		color: #666b

		span
			font-weight: bold
			font-size: 26px
			color: #c87c9e

section.intro
	margin: 7vh 0

	p
		max-width: 600px
		font-size: 20px
		line-height: 1.5
		color: #444
		margin: 20px 0

		span
			color: #984c6b
			font-style: normal

		&:not(.small) a
			color: #c87c9e
			border-bottom: 3px solid #c87c9e77
			&:hover
				color: #984c6b
				border-color: #c87c9e

		&.small
			font-size: 13px
			font-style: italic
			color: #aaa

			span
				font-weight: bold
				color: inherit
				font-style: inherit

			code
				letter-spacing: 1px
				padding: 0 3px

			abbr
				cursor: help

		&:last-child:hover
			abbr
				color: #c87c9e
				// border-bottom: 3px solid #c87c9e77
				// text-decoration: underline solid

section.projects

	h2
		color: #984c6b
		font-size: 30px

section.about

	p
		font-size: 20px
		line-height: 1.6
		color: #333
		margin: 20px 0
