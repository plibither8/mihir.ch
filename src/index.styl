@require "stylus/base"

@import "stylus/nav"

div.hr
	width: 100%
	height: 3px
	background: #fceaf3
	margin: 5vh 0

div.main
	width: 95%
	max-width: 800px
	margin: 0 auto
	padding: 10px

section.heading
	margin: 7vh 0

	h1
		font-size: 40px
		padding-bottom: 10px
		color: #984c6b

	p.caption
		font-size: 18px
		color: #666b

		span
			font-weight: bold
			font-size: 26px
			color: #c87c9e

section.intro
	margin: 7vh 0

	p
		font-size: 18px
		line-height: 1.5
		color: #82274d
		font-style: italic

		span
			font-size: 40px
			font-weight: bold
			font-style: normal

		a
			color: #c87c9e
			border-bottom: 3px solid #c87c9e77
			&:hover
				color: #82274d
				border-color: #c87c9e

section.projects

	h2
		color: #984c6b

section.about

	p
		font-size: 20px
		line-height: 1.6
		color: #333
		margin: 20px 0
