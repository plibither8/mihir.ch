@require "stylus/base"

main
	width: 95%
	margin: 0 auto
	padding: 10px
	overflow-x: hidden
	max-width: 800px

section
	margin: 7vh auto
	width: 100%

	h2
		font-family: $mono-font-stack
		color: #333
		text-shadow: 3px 3px 0 $accent-color-1
		font-size: 30px

hr
	border: none
	width: 100%
	height: 3px
	background: $accent-color-1
	margin: 7vh auto
	max-width: 800px


@import "stylus/sections/*"
@import "stylus/nav"
@import "stylus/footer"
