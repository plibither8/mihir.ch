@require "imports/main"

section.main
	width 90%
	max-width 500px
	min-height 100%
	margin 0 auto
	padding 50px 0
	font-size 16px
	color #222
	font-family Lustria

	h1
		font-size 2em

	h2
		font-size 1.3em
		color #bbb
		padding 5px 0 30px 0
	
	p
		font-size 1em
		line-height 1.7
		padding 10px 0

	a
		font-size 1em
		color #555

		&:hover
			color #ff7043

		&.link
			display flex
			margin 5px 0
			text-decoration underline

			span
				display flex
				padding-right 5px

				svg
					display inline-block
					width 1.3em
					height 1.3em
		
			&.first
				margin-top 30px