@require "imports/main"

section.main
	height 100%
	width 90%
	max-width 500px
	margin 0 auto
	padding 50px 0
	font-size 16px
	color #222

	h1
		font-size 2em

	h2
		font-size 1.5em
		color #444
		padding 5px 0 30px 0
	
	p
		font-size 1.1em
		line-height 1.5
		padding 10px 0

	a
		display block
		font-size 1.1em
		display flex
		margin 5px 0

		span
			display flex
			padding-right 5px

			svg
				display inline-block
				width 1.3em
				height 1.3em
		
		&.first
			margin-top 30px