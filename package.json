{
	"private": true,
	"scripts": {
		"lint": "run-p --silent lint:*",
		"lint:js": "xo",
		"lint:styl": "stylint src/*.styl",
		"lint-fix": "run-p --silent 'lint:* -- --fix'",
		"clean": "rimraf dist",
		"build": "webpack --mode=production && stylus ./src/*.styl --out ./dist/ --compress",
		"watch": "webpack --mode=development --watch & stylus ./src/*.styl --out ./dist/ -m --watch",
		"start": "webpack-dev-server --open & stylus ./src/*.styl --out ./dist/ -m --watch"
	},
	"devDependencies": {
		"copy-webpack-plugin": "^5.0.4",
		"html-webpack-plugin": "^3.2.0",
		"pug": "^2.0.4",
		"pug-loader": "^2.4.0",
		"rimraf": "^2.6.3",
		"size-plugin": "^1.2.0",
		"stylint": "^2.0.0",
		"stylus": "^0.54.5",
		"webpack": "^4.38.0",
		"webpack-cli": "^3.3.6",
		"webpack-dev-server": "^3.7.2",
		"xo": "^0.24.0"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"globals": [
			"browser"
		],
		"rules": {
			"import/no-unassigned-import": 0,
			"import/no-named-as-default": 0,
			"no-script-url": 0
		}
	}
}
