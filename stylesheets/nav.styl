nav
	width: 95%
	max-width: 1000px
	margin: 2vh auto 0 auto
	color: var(--accent-color-9)
	opacity: 0.7
	transition: 0.1s opacity linear
	display: flex
	justify-content: space-between
	flex-wrap: wrap

	a.nav__name
		display: inline-block
		&:before
			display: none

		img
			height: 20px
			vertical-align: text-top
			margin-right: 10px

	ul
		display: flex
		overflow-x: auto
		padding: 5px 0

		li
			list-style-type: none
			&:last-child
				margin-right: 20px

	a
		display: flex
		justify-content: center
		align-items: center
		margin: 5px
		padding: 5px 10px
		font-weight: 500
		font-size: 18px
		anchorLinkBottomBar(35%, alpha($accent-colors[4], 0.1))
		white-space: nowrap

		&.nav__link--active::before
			border-bottom: 3px solid var(--accent-color-1)

	&:hover,
	&:focus-within
		opacity: 1
