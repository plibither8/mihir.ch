@charset "utf-8"

@import "variables"
@import "functions"
@import "universal"

body, html, :root
	// Variables
	--default-font-stack: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
	--mono-font-stack: SFMono-Regular, Consolas, 'Liberation Mono', Menlo, monospace
	for color, index in $accent-colors
		--accent-color-{index}: color

	background: #fff
	width: 100%
	min-height: 100vh
	font-family var(--default-font-stack)
	font-size 16px
	font-weight: 400
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale
	-webkit-overflow-scrolling: touch
	display: flex
	flex-direction: column


// All the subpages
main
	width: 100%
	margin: 0 auto
	padding: 2vh
	overflow: hidden
	max-width: 800px
	flex: 1

section
	margin: 2vh auto
	width: 100%

	h1
		font-size: 40px
		padding: 10px 0
		color: var(--accent-color-9)
